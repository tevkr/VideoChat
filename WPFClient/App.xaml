<Application x:Class="WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFClient"
             xmlns:view="clr-namespace:WPFClient.MVVM.View"
             xmlns:viewModel="clr-namespace:WPFClient.MVVM.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModel:FirstLoadViewModel}">
                <view:FirstLoadView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:MainMenuViewModel}">
                <view:MainMenuView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
                <view:SettingsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CreateLobbyViewModel}">
                <view:CreateLobbyView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:FindLobbyViewModel}">
                <view:FindLobbyView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
